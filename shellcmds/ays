def sorter(jp1, jp2):
    prio1 = jp1.getPriority()
    prio2 = jp2.getPriority()
    if prio1 != prio2:
        return cmp(prio1, prio2)
    else:
        key1 = "%s_%s" % (jp1.domain, jp2.name)
        key2 = "%s_%s" % (jp2.domain, jp2.name)
        return cmp(key1, key2)

def getService(args, debug=None,update=False,expandInstances=True,toinstall=False,list=False, jpargs={}, hrddata=None):
    serviceTemplates=[]

    name=args.name.strip()
    if name=="*":
        name=""

    if name!="" and name.find("*")==-1:
        for pname in args.name.split(","):
            if pname.strip()!="":
                serviceTemplates += j.atyourservice.findTemplates(name=pname.strip(), domain=args.domain)
    else:
        serviceTemplates += j.atyourservice.findTemplates(domain=args.domain)
        if len(serviceTemplates) > 1 and name.find("*")!=-1:
            tofind=name.replace("*","")
            serviceTemplates=[item for item in serviceTemplates if item.name.find(tofind)!=-1]

        if len(serviceTemplates) > 1 and name.find("*")!=-1:
            pass #no need to ask interactive
        elif len(serviceTemplates) > 1 and list==False:
            if not j.application.interactive:
                print(("Found multiple serviceTemplates %s, cannot continue in non interactive mode" % (serviceTemplates)))
                j.application.stop(1)
            else:
                serviceTemplates = j.console.askChoiceMultiple(serviceTemplates, "Multiple serviceTemplates found. Select:")


    if len(serviceTemplates) == 0:
        print(("Could not find service template with name '%s' in domain '%s' " % (args.name, args.domain)))
        j.application.stop(1)

    if toinstall and args.instance<>"main" and len(serviceTemplates)>1:
        raise RuntimeError("Can only get service if only 1 service when instance set or more serviceTemplates when instance=main")

    if toinstall:
        serviceTemplates=[template.getInstance(args.instance, args=jpargs) for template in serviceTemplates]
        expandInstances = False

    if expandInstances:
        rawTemplates = serviceTemplates
        serviceTemplates = []
        for templates in rawTemplates:
            if args.instance is None:
                for instance in templates.listInstances():
                    serviceTemplates.append(templates.getInstance(instance, args=jpargs))
            else:
                serviceTemplates.append(templates.getInstance(args.instance, args=jpargs))

    if serviceTemplates==[]:
        raise RuntimeError("Cannot find serviceTemplates, need at least 1")

    return serviceTemplates


if '--help' in sys.argv or '-h' in sys.argv:
    print help

