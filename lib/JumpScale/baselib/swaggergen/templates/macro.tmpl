{% macro paramsPath(params)%}{{params.path | map(attribute='name')|join(', ')}}{% endmacro %}

{% macro responses(responses)%}
--[[
--responses
    {%for resp in responses %}
    {{ table('response', resp.schema|default([])) }}
    self:set_status({{resp.code}})
    {%endfor%}
--]]
{%endmacro%}