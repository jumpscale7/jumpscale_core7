{% from 'table.tmpl' import table %}

{% macro handlerName(name) %}{{name}}Handler{%- endmacro %}

{% macro paramsQuery(params)%}
{% for p in params.query %}
{%if loop.first %}
-- query arguments
{%endif%}
    local q_{{p.name}} = self:get_argument("{{p.name}}" {% if not p.required %} ,"" {%endif%}) --{% if p.required %} requiered{%else%} optional{%endif%}

{%endfor%}
{% endmacro %}


{% macro paramsHeader(params)%}
{% for p in params.header %}
{%if loop.first %}
-- header arguments
{%endif%}
    local h_{{p.name}} = self.headers:get("{{p.name}}",false)
{%endfor%}
{% endmacro %}

{% macro paramsBody(params)%}
{% for p in params.body %}
{%if loop.first %}
--[[ body structure
{%endif%}
{%if 'properties' in p.schema%}
{%for name, descr in (p.schema.properties|default({})).iteritems()%}
    {{name}} - {{descr.type}}
{%endfor%}
{%endif%}
{%if loop.last %}
    ]]--
    local body = self.request.body
{%endif%}
{%endfor%}
{% endmacro %}

